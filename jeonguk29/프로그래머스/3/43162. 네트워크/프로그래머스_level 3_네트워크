from collections import deque

def solution(n, computers):
    count = 0
    visited = set()
    
    for start in range(n):
        if start not in visited:
            need_visited = deque([start])  # deque로 스택 구현
            while need_visited:
                node = need_visited.pop()   # 맨 뒤에서 꺼내기 (LIFO)
                if node not in visited:
                    visited.add(node)
                    for nei in range(n):
                        if computers[node][nei] == 1 and nei not in visited:
                            need_visited.append(nei)   # 하나씩 추가
            count += 1
    return count
