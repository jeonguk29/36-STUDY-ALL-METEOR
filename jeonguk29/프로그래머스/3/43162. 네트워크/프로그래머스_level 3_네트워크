from collections import deque

def solution(n, computers):
    visited = set()
    count = 0

    def bfs(start):
        q = deque([start])
        visited.add(start)
        while q:
            node = q.popleft()
            for nei in range(n):
                if nei not in visited and computers[node][nei]:
                    visited.add(nei)
                    q.append(nei)

    for start in range(n):
        if start not in visited:
            bfs(start)   # 이 컴포넌트를 전부 방문표시
            count += 1   # 컴포넌트 1개 카운트
    return count
